@model IEnumerable<AgendaConsultorio.Models.Paciente>
@{
    ViewData["Title"] = "Index";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-default">Novo Paciente</a>
</p>

<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Procurar por nome : <input type="text" name="search" value="@ViewData["search"]" />
            <input type="submit" value="Procurar" class="btn btn-default" /> |
            <a asp-action="Index">Retornar para lista</a>
        </p>
    </div>
</form>

<table class=" table table-striped table-hover">
    <thead>
        <tr class="success">
            <th>
                @Html.DisplayNameFor(model => model.Name);
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BirthDate);
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateTimeInitial);
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateTimeEnd);
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name);
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BirthDate);
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateTimeInitial);
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateTimeEnd);
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a>
                    <a asp-action="Delete" asp-route-id="@item.Id">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>

